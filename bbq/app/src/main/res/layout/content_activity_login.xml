<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:showIn="@layout/activity_login"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/mainCardView1"
		android:layout_margin="20dp">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="25dp"
			android:background="#FFFFFF">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="登录"
				android:textStyle="bold"
				android:textSize="24sp"
				android:textColor="#000000"
				android:layout_marginBottom="10dp"/>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="bottom">

				<ImageView
					android:src="@drawable/ic_account_circle_black_24dp"
					android:layout_width="37dp"
					android:layout_height="37dp"
					android:padding="5dp"
					android:layout_marginBottom="3dp"/>

				<android.support.design.widget.TextInputLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/xiaohenglayoutdengluTextInputLayout1">

					<EditText
						android:ems="11"
						android:hint="账号"
						android:inputType="textEmailAddress"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:id="@+id/xiaohenglayoutEditText1"/>

				</android.support.design.widget.TextInputLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="bottom"
				android:layout_marginTop="2dp">

				<ImageView
					android:src="@drawable/xiaoheng_lock"
					android:layout_width="37dp"
					android:layout_height="37dp"
					android:padding="4dp"
					android:layout_marginBottom="3dp"/>

				<android.support.design.widget.TextInputLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/xiaohenglayoutdengluTextInputLayout2">

					<EditText
						android:ems="11"
						android:hint="密码"
						android:inputType="textPassword"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/xiaohenglayoutEditText2"/>

				</android.support.design.widget.TextInputLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="95dp"
				android:gravity="center">

				<android.support.v7.widget.CardView
					android:onClick="login"
					android:foreground="?android:attr/selectableItemBackgroundBorderless"
					android:clickable="true"
					android:layout_width="100dp"
					android:layout_height="45dp"
					android:id="@+id/mainCardView2"
					android:layout_marginTop="25dp"
					android:layout_marginRight="15dp">

					<LinearLayout
						android:layout_height="match_parent"
						android:layout_width="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:background="?attr/colorPrimary">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="登录"
							android:textSize="15sp"
							android:id="@+id/guanyuTextView1"
							android:textColor="#FFFFFF"
							android:textStyle="bold"/>

					</LinearLayout>

				</android.support.v7.widget.CardView>

				<android.support.v7.widget.CardView
					android:onClick="logins"
					android:foreground="?android:attr/selectableItemBackgroundBorderless"
					android:clickable="true"
					android:layout_width="100dp"
					android:layout_height="45dp"
					android:id="@+id/mainCardView2"
					android:layout_marginTop="25dp">

					<LinearLayout
						android:layout_height="match_parent"
						android:layout_width="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:background="?attr/colorPrimary">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="注册"
							android:textSize="15sp"
							android:id="@+id/guanyuTextView2"
							android:textColor="#FFFFFF"
							android:textStyle="bold"/>

					</LinearLayout>

				</android.support.v7.widget.CardView>

			</LinearLayout>

		</LinearLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>

