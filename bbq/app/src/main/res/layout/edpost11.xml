<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingTop="65dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			app:cardCornerRadius="3dp"
			app:cardElevation="3dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="3dp"
			android:layout_marginTop="3dp">

			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:layout_height="230dp"
					android:paddingLeft="5dp"
					android:paddingRight="5dp"
					android:paddingBottom="5dp"
					android:paddingTop="5dp">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="添加表白信息"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_marginLeft="10dp"
							android:textColor="#FF000000"/>

					</LinearLayout>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="text"
						android:layout_width="match_parent"
						android:ems="10"
						android:background="#FFFFFFFF"
						android:hint="你心里的那个他(她)"
						android:id="@+id/bt"
						android:textColor="@color/colorAccent"
						android:textSize="20sp"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="3dp"/>

					<View
						android:layout_height="1dp"
						android:background="?android:attr/dividerVertical"
						android:layout_width="match_parent"/>

					<android.support.design.widget.TextInputLayout
						android:id="@+id/til_content"
						app:errorEnabled="true"
						app:counterEnabled="true"
						app:counterMaxLength="1500"
						app:hintTextAppearance="@style/colorAccent"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<EditText
							android:id="@+id/ed_contents"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="大胆的把心里话说出来！"
							android:textColor="@color/colorAccent"/>

					</android.support.design.widget.TextInputLayout>

					<ImageView
						android:id="@+id/edit_img"
						android:background="@mipmap/addimg"
						android:layout_width="60dp"
						android:onClick="choose_img"
						android:layout_marginLeft="5dp"
						android:layout_gravity="left"
						android:layout_height="60dp"/>

				</LinearLayout>

			</ScrollView>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			app:cardCornerRadius="3dp"
			app:cardElevation="3dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="3dp"
			android:layout_marginTop="3dp">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_margin="5dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="更多信息"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_marginLeft="10dp"
					android:textColor="#FF000000"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="left|center">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="left|center">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="是否匿名表白："
							android:textAppearance="?android:attr/textAppearanceMedium"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="right|center">

						<Switch
							android:layout_width="wrap_content"
							android:textOff="匿名关闭中"
							android:textOn="匿名开启中"
							android:layout_height="wrap_content"
							android:id="@+id/nm"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="3dp"
			app:cardElevation="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="3dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="80dp">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:padding="5dp"
				android:id="@+id/edpost11LinearLayout1">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="left|center">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="添加背景音乐"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_marginLeft="10dp"
							android:textColor="#FF000000"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="right|center">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="添加"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="?attr/colorPrimary"
							android:id="@+id/tjyy"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:layout_marginTop="10dp">

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="left|center">

						<ImageView
							android:src="@drawable/yinyue"
							android:layout_width="70dp"
							android:layout_height="70dp"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:id="@+id/yytp"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left|center">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_marginBottom="5dp"
							android:text="未添加歌曲"
							android:id="@+id/yyname"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="未知"
							android:id="@+id/yyzz"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</android.support.v7.widget.CardView>

	</LinearLayout>

</ScrollView>

