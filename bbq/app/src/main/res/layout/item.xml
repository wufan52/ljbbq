<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:descendantFocusability="blocksDescendants">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:focusable="false"
		android:foreground="?attr/selectableItemBackground"
		app:cardCornerRadius="10dp"
		android:layout_marginTop="?attr/actionBarSize"
		android:layout_margin="5dp"
		android:id="@+id/a1listitemCardView1">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:padding="5dp">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/f1listitemRelativeLayout1">

				<ImageView
					android:adjustViewBounds="true"
					android:scaleType="centerCrop"
					android:layout_height="90dp"
					android:layout_width="90dp"
					android:id="@+id/f1listitemImageView1"
					android:layout_marginRight="5dp"
					android:visibility="visible"/>

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:layout_toRightOf="@id/f1listitemImageView1"
					android:layout_marginLeft="5dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:id="@+id/f1listitemTextView1"
						android:textColor="#000000"
						android:ellipsize="end"
						android:gravity="left|center"
						android:layout_marginBottom="5dp"/>

					<TextView
						android:layout_below="@id/f1listitemTextView1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:id="@+id/f1listitemTextView2"
						android:maxLines="4"
						android:ellipsize="end"/>

				</RelativeLayout>

			</RelativeLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:layout_below="@id/f1listitemRelativeLayout1"
				android:gravity="left|center">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal"
					android:gravity="center"
					android:layout_margin="5dp">

					<ImageView
						android:layout_height="20dp"
						android:layout_width="20dp"
						android:background="@drawable/ic_thumb_up"
						android:layout_marginRight="5dp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="0"
						android:gravity="left|center"
						android:id="@+id/a1listitemTextView1"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal"
					android:gravity="center"
					android:layout_margin="5dp">

					<ImageView
						android:layout_height="20dp"
						android:layout_width="20dp"
						android:background="@drawable/ic_heart"
						android:layout_marginRight="5dp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="999+"
						android:gravity="left|center"
						android:id="@+id/a1listitemTextView2"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal"
					android:gravity="center"
					android:layout_margin="5dp">

					<ImageView
						android:layout_height="20dp"
						android:layout_width="20dp"
						android:background="@drawable/ic_comment_text"
						android:layout_marginRight="5dp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="999+"
						android:gravity="left|center"
						android:id="@+id/a1listitemTextView3"/>

				</LinearLayout>

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:gravity="right|center">

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:id="@+id/a1listitemTextView4"
                        android:textAppearance="?android:attr/textAppearanceSmall"
						android:layout_centerVertical="true"
						android:layout_marginRight="5dp"/>

					<ImageView
						android:layout_height="35dp"
						android:layout_width="35dp"
						android:layout_toRightOf="@id/a1listitemTextView4"
						android:id="@+id/a1listitemImageView1"/>

				</RelativeLayout>

			</LinearLayout>

		</RelativeLayout>

	</android.support.v7.widget.CardView>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="文本"
		android:layout_below="@id/a1listitemCardView1"
		android:id="@+id/a1listitemTextView5"
		android:visibility="gone"/>

</RelativeLayout>

